<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="com.lmxdawn.trade.dao.SymbolDao">

    <select id="listPageDubbo" parameterType="com.lmxdawn.dubboapi.req.trade.SymbolQueryDubboReq" resultType="com.lmxdawn.dubboapi.res.trade.SymbolDubboRes">
        SELECT id,trade_coin_id,coin_id,buy_fee,buy_fee_precision,sell_fee,sell_fee_precision,min_amount,min_total,trade_total_precision,trade_price_precision,trade_amount_precision,sort,status,create_time,modified_time
        FROM `symbol`
        <where>
            <choose>
                <when test="status == 0">
                    status IN (1,2)
                </when>
                <otherwise>
                    status = #{status}
                </otherwise>
            </choose>
        </where>
        ORDER BY sort
        ASC
    </select>

    <select id="listAll" resultType="com.lmxdawn.trade.entity.Symbol">
        SELECT id,trade_coin_id,coin_id,buy_fee,buy_fee_precision,sell_fee,sell_fee_precision,min_amount,min_total,trade_total_precision,trade_price_precision,trade_amount_precision,status
        FROM `symbol`
        <where>
            status = 1
        </where>
        ORDER BY `sort` ASC
    </select>

    <select id="findByTidAndCid" resultType="com.lmxdawn.trade.entity.Symbol">
        SELECT id,buy_fee,buy_fee_precision,sell_fee,sell_fee_precision,min_amount,min_total,trade_total_precision,trade_price_precision,trade_amount_precision
        FROM `symbol`
        <where>
            trade_coin_id = #{tradeCoinId}
            and coin_id = #{coinId}
        </where>
        limit 1
    </select>

    <insert id="insert" keyProperty="id" parameterType="com.lmxdawn.trade.entity.Symbol">
        INSERT INTO `symbol`(trade_coin_id,coin_id,buy_fee,buy_fee_precision,sell_fee,sell_fee_precision,min_amount,min_total,trade_total_precision,trade_price_precision,trade_amount_precision,sort,status,create_time,modified_time)
        VALUES
        (#{tradeCoinId},
         #{coinId},
         #{buyFee},
         #{buyFeePrecision},
         #{sellFee},
         #{sellFeePrecision},
         #{minAmount},
         #{minTotal},
         #{tradeTotalPrecision},
         #{tradePricePrecision},
         #{tradeAmountPrecision},
         #{sort},
         #{status},
         #{createTime},
         #{modifiedTime})
    </insert>

    <update id="update" parameterType="com.lmxdawn.trade.entity.Symbol">
        UPDATE `symbol`
        <trim prefix="set" suffixOverrides=",">
            <if test="tradeCoinId != null">`trade_coin_id`=#{tradeCoinId},</if>
            <if test="coinId != null">`coin_id`=#{coinId},</if>
            <if test="buyFee != null">`buy_fee`=#{buyFee},</if>
            <if test="buyFeePrecision != null">`buy_fee_precision`=#{buyFeePrecision},</if>
            <if test="sellFee != null">`sell_fee`=#{sellFee},</if>
            <if test="sellFeePrecision != null">`sell_fee_precision`=#{sellFeePrecision},</if>
            <if test="minAmount != null">`min_amount`=#{minAmount},</if>
            <if test="minTotal != null">`min_total`=#{minTotal},</if>
            <if test="tradeTotalPrecision != null">`trade_total_precision`=#{tradeTotalPrecision},</if>
            <if test="tradePricePrecision != null">`trade_price_precision`=#{tradePricePrecision},</if>
            <if test="tradeAmountPrecision != null">`trade_amount_precision`=#{tradeAmountPrecision},</if>
            <if test="sort != null">`sort`=#{sort},</if>
            <if test="status != null">`status`=#{status},</if>
            <if test="modifiedTime != null">`modified_time`=#{modifiedTime},</if>
        </trim>
        WHERE `id` = #{id}
    </update>

</mapper>