<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="com.lmxdawn.user.dao.MemberDao">

    <select id="listAll" resultType="com.lmxdawn.user.entity.Member">
        SELECT member_id
        FROM member
    </select>

    <select id="findByMemberId" resultType="com.lmxdawn.user.entity.Member">
        SELECT member_id,`name`,avatar,remark
        FROM member
        <where>
            member_id = #{memberId}
        </where>
        LIMIT 1
    </select>

    <select id="findByTel" parameterType="hashmap" resultType="com.lmxdawn.user.entity.Member">
        SELECT member_id,pwd
        FROM member
        <where>
            tel = #{tel}
        </where>
        LIMIT 1
    </select>

    <insert id="insert" keyProperty="uid" parameterType="com.lmxdawn.user.entity.Member">
        INSERT INTO `member`(tel,pwd,`name`,avatar,create_time,modified_time)
        VALUES
        (#{tel},
         #{email},
         #{pwd},
         #{name},
         #{avatar},
         #{createTime},
         #{modifiedTime})
    </insert>


</mapper>