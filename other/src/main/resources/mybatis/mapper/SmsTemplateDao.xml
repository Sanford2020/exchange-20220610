<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="com.lmxdawn.other.dao.SmsTemplateDao">

    <select id="listPageDubbo" parameterType="com.lmxdawn.dubboapi.req.other.SmsTemplateQueryDubboReq" resultType="com.lmxdawn.dubboapi.res.other.SmsTemplateInfoDubboRes">
        SELECT id,platform,scene,`lang`,template_id,template_paras,remark,status,create_time,modified_time
        FROM `sms_template`
        <where>
            <if test="platform != null and '' != platform">
                `platform` = #{platform}
            </if>
            <if test="scene != null and '' != scene">
                AND `scene` = #{scene}
            </if>
            <if test="lang != null and '' != lang">
                AND `lang` = #{lang}
            </if>
        </where>
        ORDER BY create_time
        ASC
    </select>

    <select id="find" resultType="com.lmxdawn.other.entity.SmsTemplate">
        SELECT id,template_id,template_paras,status
        FROM `sms_template`
        <where>
            `platform` = #{platform}
            and `scene` = #{scene}
            and `lang` = #{lang}
        </where>
        LIMIT 1
    </select>

    <insert id="insert" keyProperty="id" parameterType="com.lmxdawn.other.entity.SmsTemplate">
        INSERT INTO `sms_template`(platform,scene,template_id,template_paras,remark,status,create_time,modified_time)
        VALUES
        (#{platform},
         #{scene},
         #{templateId},
         #{templateParas},
         #{remark},
         #{status},
         #{createTime},
         #{modifiedTime})
    </insert>

    <update id="update" parameterType="com.lmxdawn.other.entity.SmsTemplate">
        UPDATE `sms_template`
        <set>
            `platform`=#{platform},
            `scene`=#{scene},
            `template_id`=#{templateId},
            `template_paras`=#{templateParas},
            `remark`=#{remark},
            `status`=#{status},
            modified_time=#{modifiedTime}
        </set>
        WHERE `id` = #{id}
    </update>

    <delete id="delete" parameterType="java.lang.Long">
        delete from sms_template where id = #{id}
    </delete>

</mapper>